<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/SurveyBackgroundColor"
    android:orientation="vertical"
    android:padding="@dimen/margin_small" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="Thank you for your response!"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/SurveyFontColor" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium"
        android:text="You are now following this issue. If you do not want to receive updates about this issue, click &quot;Unfollow.&quot;"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/SurveyFontColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center" >

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="unfollowIssue"
                android:text="Unfollow"
                android:textColor="@color/SurveyFontColor" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="dismissThanks"
                android:text="Dismiss"
                android:textColor="@color/SurveyFontColor" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
