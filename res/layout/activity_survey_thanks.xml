<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/SurveyBackgroundColor"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank you for your response"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/SurveyFontColor" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are now following this issue. If you have more to say, click to leave a voice message."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/SurveyFontColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="dismissThanks"
            android:text="Leave a Message"
            android:textColor="@color/SurveyFontColor" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="dismissThanks"
            android:text="Dismiss"
            android:textColor="@color/SurveyFontColor" />

    </LinearLayout>

</LinearLayout>
