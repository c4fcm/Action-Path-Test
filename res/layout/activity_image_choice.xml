<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:background="@color/SurveyBackgroundColor"
    tools:context=".ImageChoiceActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/SurveyBackgroundColor"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/textViewSurveyQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What&apos;s the best option for connecting the new Chuckie Harris Park to Broadway?"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/SurveyFontColor"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewSurveyFirstOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:text="A. Street paint at intersection"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/SurveyFontColor" />

        <ImageButton
            android:id="@+id/surveyFirstImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/SurveyBackgroundColor"
            android:scaleType="fitCenter"
            android:src="@drawable/option1_streetpaint" />

        <TextView
            android:id="@+id/textViewSurveySecondOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:text="B. Gate over Cross St"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/SurveyFontColor" />

        <ImageButton
            android:id="@+id/surveySecondImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/SurveyBackgroundColor"
            android:scaleType="fitCenter"
            android:src="@drawable/option2_gate" />

        <TextView
            android:id="@+id/textViewSurveyThirdOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:text="C. Grassy corridor along Cross St Senior Center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/SurveyFontColor" />

        <ImageButton
            android:id="@+id/surveyThirdImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/SurveyBackgroundColor"
            android:scaleType="centerInside"
            android:src="@drawable/option3_grass" />

    </LinearLayout>

</ScrollView>
